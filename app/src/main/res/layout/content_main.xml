<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".modules.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@drawable/drawable_img_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/profile_picture_1"
                        app:tint="@color/black"
                        android:layout_marginStart="@dimen/_20sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/name_tv"
                        app:layout_constraintBottom_toBottomOf="@id/name_tv"/>

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:text=""
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black_2"
                        android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img"/>

                    <EditText
                        android:id="@+id/hide_keyboard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_44sdp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/whatsup_alert"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/whatsapp_1"
                        android:visibility="visible"
                        app:layout_constraintEnd_toStartOf="@id/refresh"
                        app:layout_constraintTop_toTopOf="@id/name_tv"
                        app:layout_constraintBottom_toBottomOf="@id/name_tv"/>

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:padding="@dimen/_3sdp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="@dimen/_33sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:tint="@color/black"
                        android:padding="@dimen/_9sdp"
                        android:src="@drawable/refresh"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/name_tv"
                        app:layout_constraintBottom_toBottomOf="@id/name_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/focus_view"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus />
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_64sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/add_balance_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/show_balance_drawable"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <TextView
                                    android:id="@+id/txtYourBalance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Your balance"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/black"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"/>

                                <TextView
                                    android:id="@+id/available_balance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_23sdp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    app:layout_constraintStart_toStartOf="@id/txtYourBalance"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/txtYourBalance"/>

                                <TextView
                                    android:id="@+id/add_balance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Add Balance"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/add_balance_button_drawable"
                                    app:layout_constraintStart_toStartOf="@id/available_balance"
                                    app:layout_constraintEnd_toStartOf="@id/statements"
                                    app:layout_constraintTop_toBottomOf="@id/available_balance"
                                    app:layout_constraintBottom_toBottomOf="@id/add_balance_layout"/>

                                <TextView
                                    android:id="@+id/statements"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Commission Chart"
                                    android:textColor="#0549AE"
                                    android:background="@drawable/recharge_history_button_drawable"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/add_balance"
                                    app:layout_constraintTop_toTopOf="@id/add_balance"
                                    app:layout_constraintBottom_toBottomOf="@id/add_balance"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_130sdp"
                                android:layout_marginTop="@dimen/_13sdp"
                                app:layout_constraintStart_toStartOf="@id/add_balance_layout"
                                app:layout_constraintEnd_toEndOf="@id/add_balance_layout"
                                app:layout_constraintTop_toBottomOf="@id/add_balance_layout"/>

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                app:tabBackground="@drawable/indicator_selector"
                                app:tabGravity="center"
                                android:background="@color/white"
                                app:tabIndicatorHeight="0dp"
                                android:paddingStart="-5dp"
                                app:layout_constraintStart_toStartOf="@id/viewPager"
                                app:layout_constraintEnd_toEndOf="@id/viewPager"
                                app:layout_constraintTop_toBottomOf="@id/viewPager"/>

                            <TextView
                                android:id="@+id/news"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:background="@drawable/corner_white_new"
                                android:elevation="@dimen/_2sdp"
                                android:ellipsize="marquee"
                                android:fadingEdge="horizontal"
                                android:gravity="center"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/colorPrimaryB"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:layout_constraintStart_toStartOf="@id/viewPager"
                                app:layout_constraintEnd_toEndOf="@id/viewPager"
                                app:layout_constraintTop_toBottomOf="@id/indicator"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/recharge_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/corner_white_new"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toTopOf="parent">

<!--                                <ImageView-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:src="@drawable/pattern"-->
<!--                                    android:scaleType="centerCrop"-->
<!--                                    app:layout_constraintTop_toTopOf="parent"-->
<!--                                    app:layout_constraintBottom_toBottomOf="parent"/>-->

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerviewDashboard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                    app:spanCount="4"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/txtTitleMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/colorPrimaryB"
                                android:background="@drawable/recharge_layout"
                                android:textStyle="bold"
                                android:elevation="@dimen/_2sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/recharge_layout"
                                app:layout_constraintBottom_toTopOf="@id/recharge_layout"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:elevation="@dimen/_2sdp"
                            android:visibility="gone">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:background="@drawable/corner_white_new"
                                    android:orientation="vertical"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent">

                                    <ImageView
                                        android:layout_width="@dimen/_38sdp"
                                        android:layout_height="@dimen/_38sdp"
                                        android:background="@drawable/rounded_shape"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/bharat_logo" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Bill pay"
                                        android:textColor="@color/black_2"
                                        android:textSize="@dimen/_11sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/slider_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp">

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/viewPagerImageSlider"
                                android:layout_width="match_parent"
                                android:paddingEnd="@dimen/_30sdp"
                                android:clipToPadding="false"
                                android:layout_height="@dimen/_170sdp"
                                tools:ignore="RtlSymmetry" />

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/into_tab_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/viewPagerImageSlider"
                                android:layout_gravity="bottom"
                                android:background="@color/white"
                                app:tabBackground="@drawable/indicator_selector"
                                app:tabGravity="center"
                                app:tabIndicatorHeight="0dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/commission_report_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_drawable"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="COMMISSION REPORT"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_2sdp"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_11sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/main_layout"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:visibility="gone">

                                <LinearLayout
                                    android:id="@+id/members_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/corner_primary_gr"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/_4sdp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/_17sdp"
                                        android:layout_height="@dimen/_17sdp"
                                        android:src="@drawable/group" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:text="View\nMember"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/add_member"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/corner_primary_gr"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/_4sdp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:src="@drawable/add_member" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:text="New\nMember"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/downline_pckage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/corner_primary_gr"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:src="@drawable/add_member" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:text="Downline\nPackages"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp">
                            <TextView
                                android:id="@+id/txtAppName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="MaxPe"
                                android:textSize="65sp"
                                android:textStyle="bold"
                                android:textColor="#1A000000"
                                android:gravity="center"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/txtMobileRecharge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Mobile Recharge App"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginTop="-10dp"
                                android:textColor="#1A000000"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtAppName"/>

                            <TextView
                                android:id="@+id/txtMadeWith"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MADE WITH"
                                android:textSize="13sp"
                                android:textColor="#1A000000"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/imgHeart"
                                app:layout_constraintTop_toBottomOf="@id/txtMobileRecharge"/>

                            <ImageView
                                android:id="@+id/imgHeart"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/heart"
                                android:layout_marginStart="3dp"
                                android:layout_marginEnd="3dp"
                                app:layout_constraintTop_toTopOf="@id/txtMadeWith"
                                app:layout_constraintBottom_toBottomOf="@id/txtMadeWith"
                                app:layout_constraintStart_toEndOf="@id/txtMadeWith"
                                app:layout_constraintEnd_toStartOf="@id/txtInIndia"/>

                            <TextView
                                android:id="@+id/txtInIndia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IN INDIA"
                                android:textSize="13sp"
                                android:textColor="#1A000000"
                                app:layout_constraintStart_toEndOf="@id/imgHeart"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/txtMadeWith"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_1"
                    android:layout_alignParentBottom="true">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_75sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/bottom_nav"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/bottom_nav"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <View
                                android:id="@+id/open_account"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/all_services"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:id="@+id/imgAccount"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/profile_tab"
                                app:layout_constraintVertical_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="@id/open_account"
                                app:layout_constraintEnd_toEndOf="@id/open_account"
                                app:layout_constraintTop_toTopOf="@id/open_account"
                                app:layout_constraintBottom_toTopOf="@id/txtAccount"/>

                            <TextView
                                android:id="@+id/txtAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="Profile"
                                android:textColor="#89929B"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/imgAccount"
                                app:layout_constraintStart_toStartOf="@id/open_account"
                                app:layout_constraintEnd_toEndOf="@id/open_account"
                                app:layout_constraintBottom_toBottomOf="@id/open_account"/>

                            <View
                                android:id="@+id/all_services"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/open_account"
                                app:layout_constraintEnd_toStartOf="@id/share_earn_layout"
                                app:layout_constraintBottom_toBottomOf="@id/open_account"/>

                            <ImageView
                                android:id="@+id/imgAllServices"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/services_2"
                                app:layout_constraintVertical_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="@id/all_services"
                                app:layout_constraintEnd_toEndOf="@id/all_services"
                                app:layout_constraintTop_toTopOf="@id/all_services"
                                app:layout_constraintBottom_toTopOf="@id/txtAllServices"/>

                            <TextView
                                android:id="@+id/txtAllServices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="All Services"
                                android:textColor="#89929B"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/imgAllServices"
                                app:layout_constraintStart_toStartOf="@id/all_services"
                                app:layout_constraintEnd_toEndOf="@id/all_services"
                                app:layout_constraintBottom_toBottomOf="@id/all_services"/>

                            <View
                                android:id="@+id/share_earn_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/all_services"
                                app:layout_constraintEnd_toStartOf="@id/history"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <View
                                android:id="@+id/history"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/share_earn_layout"
                                app:layout_constraintEnd_toStartOf="@id/support_layout"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:id="@+id/imgHistory"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/history_3"
                                app:tint="#89929B"
                                app:layout_constraintVertical_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="@id/history"
                                app:layout_constraintEnd_toEndOf="@id/history"
                                app:layout_constraintTop_toTopOf="@id/history"
                                app:layout_constraintBottom_toTopOf="@id/txtHistory"/>

                            <TextView
                                android:id="@+id/txtHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="History"
                                android:textColor="#89929B"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/imgHistory"
                                app:layout_constraintStart_toStartOf="@id/history"
                                app:layout_constraintEnd_toEndOf="@id/history"
                                app:layout_constraintBottom_toBottomOf="@id/history"/>

                            <View
                                android:id="@+id/support_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/history"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:id="@+id/imgSupport"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/support_1"
                                app:layout_constraintVertical_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="@id/support_layout"
                                app:layout_constraintEnd_toEndOf="@id/support_layout"
                                app:layout_constraintTop_toTopOf="@id/support_layout"
                                app:layout_constraintBottom_toTopOf="@id/txtSupport"/>

                            <TextView
                                android:id="@+id/txtSupport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="Support"
                                android:textColor="#89929B"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/imgSupport"
                                app:layout_constraintStart_toStartOf="@id/support_layout"
                                app:layout_constraintEnd_toEndOf="@id/support_layout"
                                app:layout_constraintBottom_toBottomOf="@id/support_layout"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:src="@drawable/refer_1"
                            android:padding="14dp"
                            android:background="@drawable/circle_drawable"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@id/bottom_nav"
                            app:layout_constraintEnd_toEndOf="@id/bottom_nav"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="end"
                    android:visibility="gone">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fbrefer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@color/yellow"
                        android:src="@drawable/refer"
                        app:backgroundTint="@color/red"
                        app:rippleColor="@color/white"
                        android:contentDescription="@string/app_name"
                        android:importantForAccessibility="no" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#BA333333"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ProgressBar
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:indeterminateDrawable="@drawable/layout_process_bar" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>