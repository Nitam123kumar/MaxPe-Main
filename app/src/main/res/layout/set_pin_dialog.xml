<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:padding="17dp"
                android:src="@drawable/cross" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Set  Mpin for recharge &amp; send money"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/_13sdp" />


                    <EditText
                        android:id="@+id/pin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:gravity="center_vertical"
                        android:hint="Enter Old Mpin"
                        android:paddingStart="@dimen/_10sdp"
                        android:inputType="number"
                        android:paddingTop="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLength="4"
                        android:background="@drawable/corner_white_circle_st"
                        android:paddingBottom="@dimen/_1sdp"
                        android:textColor="@color/black_2"
                        android:textColorHint="@color/black_light"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/pin_con"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:gravity="center_vertical"
                        android:hint="Enter New Mpin"
                        android:paddingStart="@dimen/_10sdp"
                        android:inputType="number"
                        android:paddingTop="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLength="4"
                        android:background="@drawable/corner_white_circle_st"
                        android:paddingBottom="@dimen/_1sdp"
                        android:textColor="@color/black_2"
                        android:textColorHint="@color/black_light"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/proceed"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/corner_circle_primary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</layout>