<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="135dp"
    android:padding="5dp"
    android:elevation="20dp"
    android:layout_gravity="center"
    android:background="@drawable/payment_settings_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgUpi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="5dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtUpi"/>

    <TextView
        android:id="@+id/txtUpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgUpi"
        app:layout_constraintBottom_toTopOf="@id/viewLine"/>

    <View
        android:id="@+id/viewLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#4DD9D9D9"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toBottomOf="@id/txtUpi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtUpi2"/>

    <TextView
        android:id="@+id/txtUpi2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="5dp"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="3dp"
        android:maxLines="2"
        android:textColor="@color/black_5"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine" />

</androidx.constraintlayout.widget.ConstraintLayout>