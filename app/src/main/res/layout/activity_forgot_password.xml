<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/app_bar_custom" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/top"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/top1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/_20sdp">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/app_icon" />

                            <TextView
                                android:id="@+id/login_text"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="Reset Password"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/mobile_number_layout"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/_10sdp"
                                app:hintTextColor="@color/colorPrimaryB"
                                android:textColorHint="#B3B3B3"
                                app:boxStrokeColor="@color/colorPrimaryB"
                                app:cursorColor="@color/colorPrimaryB"
                                style="@style/TextInputLayoutNew"
                                app:boxCornerRadiusBottomEnd="@dimen/_30sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_30sdp"
                                app:boxCornerRadiusTopEnd="@dimen/_30sdp"
                                app:boxCornerRadiusTopStart="@dimen/_30sdp"
                                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/mobile_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Mobile Number"
                                    android:maxLength="10"
                                    android:textStyle="bold"
                                    android:textColorHint="#B5B5B5"
                                    android:textColor="@color/black_4"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/_12sdp"
                                    android:inputType="phone" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:layout_marginBottom="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/forgot_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/corner_circle_primary"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:paddingLeft="@dimen/_30sdp"
                                    android:paddingRight="@dimen/_30sdp"
                                    android:text="Reset Password"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_17sdp" />


                            </RelativeLayout>


                            <TextView
                                android:id="@+id/or"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/top"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="OR"
                                android:textAllCaps="false"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/_12sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/or"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/_20sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Remembered your password."
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black_2"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/goForLogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:text="Login?"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimaryB"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bottom"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/bottom" />

                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BA333333"
                android:gravity="center"
                android:orientation="vertical">


                <ProgressBar
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:indeterminateDrawable="@drawable/layout_process_bar" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BA333333"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/wifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="No Internet available.\nCheck connection"
                android:textColor="@color/white_5" />

            <TextView
                android:id="@+id/retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_primary"
                android:gravity="center"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Re-Try"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>
</layout>
